{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "node"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/store/eventWallInterface": [
        "src/Packages/EventWall/interface/index.ts"
      ],
      "@/services/outfire": ["src/Packages/Outfire/services/outfire.ts"],
      "@/pages/outfire/*": ["src/Packages/Outfire/pages/*"],
      "@/*": ["src/*"]
    },
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "checkJs": true,
    "sourceMap": true,
    "strictFunctionTypes": false,
    "strictNullChecks": true
  },
  "include": ["./src"],
  "exclude": ["./src/store/miniDva/*", "./src/**/*.n9e.tsx"], //*.n9e.tsx 都是为了整合夜莺所备份的文件 
  "files": ["globals.d.ts"]
}
